{
  "name": "quick-voicebot-drive-thru",
  "version": "1.0.0",
  "description": "Production-grade AI voicebot for Quick drive-thru",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch src/server.ts",
    "client": "vite",
    "build": "tsc && vite build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/websocket": "^10.0.1",
    "@fastify/static": "^7.0.0",
    "fastify": "^4.26.0",
    "ws": "^8.18.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0",
    "uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vite": "^5.3.4",
    "vitest": "^2.0.0",
    "@playwright/test": "^1.45.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}